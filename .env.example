# Tapin Environment Configuration
# DO NOT commit this file - it's in .gitignore
# Copy this to .env and fill in your actual values

# =============================================================================
# LLM Configuration - IMPORTANT!
# =============================================================================
# For testing without API keys, use:
LLM_PROVIDER=mock

# For real AI features, choose one:
# LLM_PROVIDER=google
# LLM_PROVIDER=perplexity
# LLM_PROVIDER=ollama

# LLM Model Configuration
LLM_MODEL=gemini-2.5-flash-lite

# API Keys (only needed if not using mock)
PERPLEXITY_API_KEY=your-perplexity-key-here
GOOGLE_API_KEY=your-google-api-key-here
CUSTOM_SEARCH_ENGINE_ID=your-custom-search-id-here
CUSTOM_SEARCH_API_KEY=your-custom-search-api-key-here

# Local Perplexity mock endpoint (for testing fallback)
PERPLEXITY_API_URL=https://api.perplexity.ai/chat/completions

# Ollama Configuration (if using ollama)
OLLAMA_MODEL=mistral

# =============================================================================
# Ticketmaster API
# =============================================================================
TICKETMASTER_API_KEY=your-ticketmaster-api-key-here
TICKETMASTER_CONSUMER_SECRET=your-ticketmaster-secret-here

# =============================================================================
# Supabase Configuration
# =============================================================================
SUPABASE_URL=https://your-project.supabase.co
SUPABASE_ANON_KEY=your-supabase-anon-key-here

# Supabase JWT Secret (only needed if verifying Supabase Auth tokens in Flask)
SUPABASE_JWT_SECRET=your-supabase-jwt-secret-here

# =============================================================================
# Database Configuration
# =============================================================================
# RECOMMENDED: Use Session Pooler (IPv4 compatible, better for Flask)
SQLALCHEMY_DATABASE_URI=postgresql://user:password@host:5432/database?pool_mode=session  # pragma: allowlist secret

# Alternative: Direct Connection (requires IPv6 or IPv4 add-on)
# SQLALCHEMY_DATABASE_URI=postgresql://user:password@host:5432/database  # pragma: allowlist secret

# Alternative DATABASE_URL format (for backwards compatibility)
# DATABASE_URL=postgresql://user:password@host:5432/database?pool_mode=session  # pragma: allowlist secret

# For local development (SQLite):
# SQLALCHEMY_DATABASE_URI=sqlite:///data.db

# =============================================================================
# Flask & Security Configuration
# =============================================================================
FLASK_ENV=development

# Flask's own secret key (for sessions, CSRF, cookies)
# Generate with: python -c "import secrets; print(secrets.token_hex(32))"
SECRET_KEY=your-secret-key-here

# Flask-JWT-Extended secret (for YOUR app's JWT tokens, not Supabase)
JWT_SECRET_KEY=your-jwt-secret-key-here

# Flask security password salt
SECURITY_PASSWORD_SALT=your-password-salt-here

# =============================================================================
# Cache & Performance
# =============================================================================
CACHE_EXPIRY_DAYS=30

# =============================================================================
# Frontend Configuration
# =============================================================================
VITE_API_URL=http://127.0.0.1:5000

# =============================================================================
# CORS Configuration
# =============================================================================
CORS_ORIGINS=http://localhost:5173,http://localhost:3000,http://localhost:3001,http://127.0.0.1:5173

# =============================================================================
# Email Configuration (optional - for password reset)
# =============================================================================
# SMTP_HOST=smtp.gmail.com
# SMTP_PORT=587
# SMTP_USER=your-email@gmail.com
# SMTP_PASS=your-app-password
# SMTP_USE_TLS=true
